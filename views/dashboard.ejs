    <div id="available-templates">
        <h2>Available Templates</h2>
        <ul class="templates">
        <% for(let i=0; i<flTemplates.length; i++) { %>
            <li class="available-templates">
                <span><%= flTemplates[i].countyName[0].toUpperCase() + flTemplates[i].countyName.slice(1) %></span>
                <% if (flTemplates[i].tier === 'sc') { %>
                    <span>Small Claims</span>
                <% } else if (flTemplates[i].tier === 'cc') { %>
                    <span>County Civil</span>
                <% } else if (flTemplates[i].tier === 'ca') { %>
                    <span>Circuit Civil</span>
                <% } %>
                <span id="mongoId" class="hidden"><%= flTemplates[i]._id %></span>
            </li>
        <% } %>
        </ul>
    </div>

    <div class="userTemplates">
        <h2>Your Templates</h2>
    </div>

    <div class="customers">
        <h2>Your Customers</h2>
        <ul class="customerList">
            <% for(let i=0; i<customerList.length; i++) { %>
                <li class="available-templates">
                    <span><%= customerList[i].customerName %>: <%= customerList[i].email %></span>
                    <span>Edit</span>
                    <span>Delete</span>
                    <span id="mongoId" class="hidden"><%= customerList[i]._id %></span>
                </li>
            <% } %>
            </ul>
    </div>
    <form action="/dashboard/addCustomer" method="POST" id="addCustomerContact">
        <h2>Add A Customer:</h2>
        <p>Use the form below to add a customer's email.</p>
        <p>
            <label><span>Name: </span></label>
            <input type="text" name="customerName" id="addCustomerName">

            <label><span>Nickname: </span></label>
            <input type="text" name="customerNickname" id="customerNickname">

            <label><span>Email: </span></label>
            <input type="email" name="customerEmail" id="customerEmail">
        </p>
        <input type="submit">
    </form>
    
