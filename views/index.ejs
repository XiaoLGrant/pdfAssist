    <!-- Boxes -->
    <section class="p-5">
        <div class="container">
            <div class="row text-center g-4">
                <div class="col-md">
                    <div class="card bg-dark text-light">
                        <div class="card-body text-center">
                            <div class="h1 mb-3">
                                <i class="bi bi-check2-circle"></i>
                            </div>
                            <h3 class="card-title mb-3">Step 1:<br>Select a template.</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="card bg-dark text-light">
                        <div class="card-body text-center">
                            <div class="h1 mb-3">
                                <i class="bi bi-input-cursor-text"></i>
                            </div>
                            <h3 class="card-title mb-3">Step 2: Enter your case information.</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="card bg-dark text-light">
                        <div class="card-body text-center">
                            <div class="h1 mb-3">
                                <i class="bi bi-download"></i>
                            </div>
                            <h3 class="card-title mb-3">Step 3: Download your document.</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="flTemplates" class="p-5 bg-dark text-light">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-md p-5">
                    <h2>Available FL Templates</h2>
                    <p class="lead">Templates for FL summonses, aliases, and pluries are available in the following counties:
                        <ul class="templates">
                            <% for(let i=0; i<flTemplates.length; i++) { %>
                                <li class="available-templates">
                                    <span><%= flTemplates[i].countyName[0].toUpperCase() + flTemplates[i].countyName.slice(1) %></span>
                                    <% if (flTemplates[i].tier === 'sc') { %>
                                        <span>Small Claims</span>
                                    <% } else if (flTemplates[i].tier === 'cc') { %>
                                        <span>County Civil</span>
                                    <% } else if (flTemplates[i].tier === 'ca') { %>
                                        <span>Circuit Civil</span>
                                    <% } %>
                                    <span id="mongoId" class="hidden"><%= flTemplates[i]._id %></span>
                                </li>
                            <% } %>
                        </ul>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section id="txTemplates" class="p-5">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-md p-5">
                    <h2>Available TX Templates</h2>
                    <p class="lead">Templates for TX requests are available for the following documents:
                        <ul class="templates">
                            <% for(let i=0; i<flTemplates.length; i++) { %>
                                <li class="available-templates">
                                    <span><%= flTemplates[i].countyName[0].toUpperCase() + flTemplates[i].countyName.slice(1) %></span>
                                    <% if (flTemplates[i].tier === 'sc') { %>
                                        <span>Small Claims</span>
                                    <% } else if (flTemplates[i].tier === 'cc') { %>
                                        <span>County Civil</span>
                                    <% } else if (flTemplates[i].tier === 'ca') { %>
                                        <span>Circuit Civil</span>
                                    <% } %>
                                    <span id="mongoId" class="hidden"><%= flTemplates[i]._id %></span>
                                </li>
                            <% } %>
                        </ul>
                    </p>
                </div>
            </div>
        </div>
    </section>
